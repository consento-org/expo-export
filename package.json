{
  "name": "expoexport",
  "version": "1.0.0",
  "private": true,
  "description": "Text-Style and Asset export for sketch to be used in Expo",
  "author": "Consento <keepsafe@consento.org>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/consento-org/expo-export"
  },
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "expoexport",
    "manifest": "src/manifest.json",
    "main": "expoexport.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link",
    "lint": "eslint --ext .js,.ts .",
    "test": "jest"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.4",
    "@skpm/fs": "^0.2.5",
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "eslint": "^6.5.1",
    "eslint-config-standard-with-typescript": "^10.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "sketch": "^0.2.0",
    "sketch-api": "^2.0.0",
    "skpm": "^1.3.1",
    "terser-webpack-plugin": "^2.1.3",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "node_modules/*",
    "dist/*",
    "coverage/*",
    "**/*.d.ts",
    "/src/public/",
    "/src/types/"
  ],
  "dependencies": {
    "sketch-file": "^0.2.0"
  }
}
