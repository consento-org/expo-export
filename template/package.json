{
  "name": "@consento/expo-export",
  "description": "A black template to be used with the expo-export plugin.",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "postinstall": "jetify",
    "android": "npx expo-cli android",
    "ios": "npx expo-cli ios",
    "web": "npx expo-cli start --web",
    "start": "npx expo-cli start",
    "test": "jest",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx .",
    "android:reload": "adb shell input text \"RR\"",
    "android:menu": "adb shell input keyevent 82"
  },
  "dependencies": {
    "@react-native-community/masked-view": "0.1.10",
    "@react-navigation/bottom-tabs": "^5.8.0",
    "@react-navigation/native": "^5.7.3",
    "@react-navigation/stack": "^5.9.0",
    "expo": "^38.0.0",
    "expo-localization": "~8.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-38.0.2.tar.gz",
    "react-native-gesture-handler": "~1.6.0",
    "react-native-reanimated": "~1.9.0",
    "react-native-safe-area-context": "~3.0.7",
    "react-native-screens": "~2.9.0",
    "react-native-svg": "^12.1.0",
    "react-native-web": "~0.11.7"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@types/enzyme": "^3.10.4",
    "@types/fbemitter": "^2.0.32",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.48",
    "@types/react-native": "^0.63.11",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "babel-preset-expo": "^8.2.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.3",
    "eslint": "^7.7.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.4.2",
    "jest-environment-enzyme": "^7.1.2",
    "jest-enzyme": "^7.1.2",
    "jest-expo": "^38.0.0",
    "jetifier": "^1.6.6",
    "json": "^10.0.0",
    "nicer": "^1.0.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2",
    "unimodules-permissions-interface": "~5.2.1"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "jest-enzyme"
    ],
    "testEnvironment": "enzyme",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    }
  },
  "eslintConfig": {
    "extends": [
      "standard-with-typescript",
      "standard-react"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "react/jsx-closing-bracket-location": "off",
      "react/jsx-closing-tag-location": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/*",
    "dist/*",
    "coverage/*",
    "**/*.d.ts",
    "/src/public/",
    "/src/types/"
  ]
}
